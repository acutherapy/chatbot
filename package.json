{
  "name": "multi-platform-chatbot",
  "version": "1.0.0",
  "description": "Multi-platform chatbot for clinic with Messenger, Instagram, and web support",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'No build step required for Vercel'",
    "build:check": "tsc --noEmit",
    "lint": "eslint src tests scripts --ext .js,.ts",
    "lint:fix": "eslint src tests scripts --ext .js,.ts --fix",
    "format": "prettier --write src tests scripts",
    "format:check": "prettier --check src tests scripts",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:performance": "vitest run tests/performance",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:all": "npm run lint && npm run type-check && npm run test",
    "setup": "node scripts/setup-env.js",
    "setup-local": "node setup-local-env.js",
    "test-ai": "node scripts/test-ai.js",
    "test-local": "node local-test.js",
    "deploy": "npx vercel --prod",
    "env:add": "npx vercel env add",
    "env:ls": "npx vercel env ls"
  },
  "keywords": ["chatbot", "messenger", "instagram", "openai", "clinic"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "axios": "^1.6.2",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "vitest": "^1.0.0",
    "playwright": "^1.40.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "@types/node": "^20.8.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
